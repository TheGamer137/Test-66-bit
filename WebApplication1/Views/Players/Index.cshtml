@model IEnumerable<Player>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Список футболистов</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Players" class="btn btn-info form-control text-white">
            Добавить нового футболиста
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="PlayersList" class="table table-striped table-bordered" style="width:100%">
            @if (Model.Count() > 0)
            {
                <thead>
                    <tr class="text-center">
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Пол</th>
                        <th>Дата рождения</th>
                        <th>Команда</th>
                        <th>Страна</th>
                        <th>Опция</th>
                    </tr>
                </thead>
                @await Html.PartialAsync("_GetPlayer", Model)
            }
            else
            {
                <tr>Пока никаких футболистов не добавлено.</tr>
            }
        </table>
    </div>
</div>
